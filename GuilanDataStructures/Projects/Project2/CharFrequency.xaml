<UserControl
    x:Class="GuilanDataStructures.Projects.Project2.CharFrequency"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GuilanDataStructures.Projects.Project2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="15"
    d:DesignWidth="35"
    mc:Ignorable="d">
    <Border x:Name="outerBorder" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border x:Name="innerBorder" BorderThickness="0,0,1,0">
                <TextBlock
                    x:Name="char"
                    Grid.Column="0"
                    Padding="5,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FlowDirection="RightToLeft" />
            </Border>
            <TextBlock
                x:Name="freq"
                Grid.Column="1"
                Padding="5,3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FlowDirection="RightToLeft" />

        </Grid>
    </Border>
</UserControl>
