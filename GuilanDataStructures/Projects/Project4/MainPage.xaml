<Page x:Class="GuilanDataStructures.Projects.Project4.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuilanDataStructures.Projects.Project4"
      xmlns:ccb="clr-namespace:GuilanDataStructures.CommonControls.ButtonBoxControls"
      mc:Ignorable="d" Background="White" x:Name="mainPage"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="mainPage"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" Duration="0:0:0.5"
                                     To="1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Grid>
        <ccb:ResizableButtonBox UseDFS="{Binding ElementName=mainPage,Path=UseDFS}" />
    </Grid>
</Page>
